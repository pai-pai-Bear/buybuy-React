.header-wrap
  height 100px

  #header
    width 100%
    position fixed
    left 0
    top 0 
    z-index 100
    background #fff  
    
    .search
      display flex
      align-items center
      padding 16px 30px
      box-sizing border-box
      width 100%
      height 88px
      line-height 56px
      .jumpSearch
        background-color #ededed
        flex auto
        margin 0 20px
        border-radius 5px
        text-align center
        font-size 26px
        color #666
        vertical-align middle
        .iconfont
          font-size 32px
          vertical-align middle
          margin-right 6px 
      button 
        width 74px
        height 40px
        margin auto 0
        color #b4282d
        font-size 24px
        font-weight bold
        outline none 
        border-style none
        background #fff
        border 1px solid #b4282d
        border-radius 8px
      img 
        vertical-align middle
    .nav
      display flex
      height 60px
      line-height 60px
      .navLeft
        position relative
        left 0
        height 100%
        margin 0 30px
        .dd
          position absolute
          left 0
          display flex
          height 100%
          font-size 26px
          li
            display inline-block
            width 110px
            padding 0 20px
            text-align center
            color #333
            &.action
              color #b4282d
              border-bottom 6px solid #b4282d
            span
              display block
              width 100%
              white-space nowrap
      .pp
        display flex
        flex-wrap wrap
        position absolute
        top 147px
        left 0  
        padding-top 24px
        height 288px
        width 100%  
        font-size 24px
        color #333
        background #fff
        li
          margin 0 0 40px 30px
          width 150px
          height 56px
          text-align center
          border 1px solid #eee
          letter-spacing 4px
          background #fafafa
          &.action
            border 1px solid #b4282d
            color #b4282d
      

      .navLeft
        width 700px
        overflow hidden
        .normal
          width 640px
          height 65px
          position absolute
          left 0
          background #fff
          color #333
          z-index 10
          p
            letter-spacing 4px
            font-size 26px
      .navRight
        position absolute
        right 0
        display flex
        width 160px
        .liner
          width 100%
          height 60px
          background-image linear-gradient(to right,rgba(255,255,255,0) 0,#fff 40%)
        .toggleWrap
          position absolute
          right 0
          height 60px
          width 100px
          text-align center
          transition transform .3s
          &.rotate
            transform rotate(180deg)
          .iconfont
            font-size 56px
            color #999

    
.mask
  position absolute
  top 160px
  left 0
  height 100%
  width 100%
  background rgba(0,0,0, .5)
  z-index 99
.swiper-container
  height 370px
  width 100%
  .swiper-wrapper
    height 100%
    width 100%
    .swiper-slide
      height 100%
      width 100%
      img
        height 100%
        width 100%
  .swiper-pagination
    bottom 28px
    span 
      margin 0 6px 
      height 4px
      width 40px
      background #fff
.promise
  display flex
  align-items center
  padding 0 30px
  height 72px
  font-size 24px
  color #333
  background #fff
  li
    flex 1
    .iconfont
      font-size 26px
      color #b4282d
    span 
      margin-left 8px

.category-list
  .category-thing
    display flex
    background #fff
    flex-wrap wrap
    padding-bottom 32px
    li
      display flex
      flex-direction column
      align-content  center
      justify-content center
      text-align center
      margin 10px 20px 9px
      img 
        width 110px
        height 110px
        margin-bottom 20px
      span
        color #333
        font-size 26px
  .category-banner
    background #fff

    img 
      display block
      height 127px
      width 100%
  .srdz
    box-sizing border-box
    display flex
    flex-wrap wrap
    height 576px
    padding 14px 30px 30px
    margin-bottom 20px
    background #fff
    .sr-item
      box-sizing border-box
      width 340px
      height 49.5%
      background #f5f5f5
      margin-right 4px 
      margin-bottom 6px 
      &.ltd
        padding 20px 0 0 20px
        .lt
          color #333
          .pt
            height 48px
            font-size 32px
          .pb 
            height 36px
            width 216px
            font-size 26px
            color #7f7f7f
            margin-bottom 20px
  .srdz-s    
    box-sizing border-box
    display flex
    flex-wrap wrap
    height 506px
    margin-bottom 20px
    background #fff      
    p
      padding 0 30px 0px
      height 100px
      width 100%
      line-height 100px
      font-size 32px
      color #333
    .srdz-swiper 
      width 100%
      .sr-swiper-container 
        height 406px
        width 100%
        .swiper-wrapper
          height 346px
          .swiper-slide  
            width 750px
            .swiper-item
              display inline-block
              margin-left 25px
              img 
                background #eee
              .swiper-name
                width 216px
                font-size 24px
                box-sizing border-box
                padding  5px 15px 0

                span
                  font-weight bold
                  line-height 34px
                  &.price
                    color #b4282d
                  &.item-name  
                    display inline-block
                    height 60px
                    text-overflow ellipsis
                    overflow hidden
                    
              div
                img
                  height 216px
                  width 216px
                  margin-bottom 15px
        .sr-swiper-pagination
          text-align center
          span 
            background #b4282d

  .srdz-b  
    box-sizing border-box
    height 698px
    margin-bottom 20px
    background #fff     
    &.big  
      height 833px
    p
      padding 0 30px 0px
      height 100px
      width 690px
      line-height 100px
      font-size 32px
      color #333
      span
        &.more 
          float right
          font-size 26px
          .iconfont
            font-size 26px
    .b-list
      display flex  
      flex-wrap wrap
      box-sizing border-box
      padding 0 10px 0 30px
      width 100%
      li
        margin-right 20px
        padding-bottom 30px
        .img-wrap
          margin-bottom 20px
          background #eee
          img
            width 216px
            height 216px
        .text-wrap
          font-size 24px
          .new  
            margin 0 15px 0 25px
            color #b4282d    
          .old
            text-decoration: line-through
        .name
          width 216px
          font-size 24px
          box-sizing border-box
          span
            font-weight bold
            line-height 34px
            &.price
              color #b4282d
  .srdz-t
    height 784px
    width 100%
    box-sizing border-box
    margin-bottom 20px
    background #fff  
    p
      padding 0 30px 0px
      height 100px
      width 690px
      line-height 100px
      font-size 32px
      color #333
      span
        &.more 
          float right
          font-size 26px
          .iconfont
            font-size 26px
    .t-wrap
      display flex
      height 280px
      margin 0 30px 20px
      align-items center
      background #FEF0DF
      .i-wrap
        margin-right 20px
      .t-r-wrap
        .one
          font-size 20px
          margin-bottom 20px
          span
            display inline-block
            width 118px
            height 30px
            line-height 30px
            text-align center
            border-radius 5px
            border 1px solid #b4282d
            color #b4282d
        .two
          margin-bottom 14px
          color #333
          font-size 28px
        .three 
          margin-bottom 14px
          font-size 24px
        .four
          font-size 24px
          color #b4282d  
    .b-wrap
      display flex
      padding-left 10px
      .b-item
        margin-left 20px
        .item-i
          img
            margin-bottom 20px
            height 216px
            width 216px
            background #eee
        .name
          width 216px
          font-size 24px
          box-sizing border-box
          span
            font-weight bold
            line-height 34px
            &.price
              color #b4282d    
          div    
            margin-top 5px
            height 32px
            width 66px
            color #b4282d
            font-size 22px
            border 1px solid #b4282d
            text-align center
            border-radius 50px





