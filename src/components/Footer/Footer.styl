#footer
  display flex
  position fixed
  bottom 0
  left 0
  width 100%
  height 98px
  background #fff
  z-index 98
  div
    display flex
    justify-content center
    align-items center
    width 20%
    color #666
    
    a
      display block
      text-align center
      &.active
        color #b4282d
      .item
        text-align center
        .iconfont
          display inline-block
          font-size 34px
          margin-bottom 6px
        span
          display block
          font-size 24px

    